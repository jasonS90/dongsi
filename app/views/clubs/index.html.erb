<p id="notice"><%= notice %></p>

<h1>Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th>Category1</th>
      <th>Category2</th>
      <th>Category3</th>
      <th>Category4</th>
      <th>User</th>
      <th>Follower</th>
      <th>Intro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.img %></td>
        <td><%= club.category1 %></td>
        <td><%= club.category2 %></td>
        <td><%= club.category3 %></td>
        <td><%= club.category4 %></td>
        <td><%= club.user.email %></td>
        <td><%= club.follower %></td>
        <td><%= club.intro %></td>
        <td><%= link_to 'Show', club %></td>
        <td><%= link_to 'Edit', edit_club_path(club) %></td>
        <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

